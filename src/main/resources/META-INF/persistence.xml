<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="RolaBolaPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- Config banco -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/RolaBola"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="igormiranda8"/>

            <!-- Dialeto do Hibernate para PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Opções úteis -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Saída de logs e SQL na execução do Hibernate. Imprime as queries que está executando e outras mensagens informativas. -->
            <property name="hibernate.show_sql" value="false"/>

            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
